
@model IEnumerable<Garage_2._0.Models.ViewModels.UserOverviewViewModel>

<h1>User Overview</h1>

<form method="get">
    <input type="text" name="searchField" placeholder="Search by name" />
    <select name="vehicleTypeFilter">
        <option value="">All Vehicle Types</option>
       @foreach (var type in Enum.GetValues(typeof(VehicleType)).Cast<VehicleType>())
{
    <option value="@type">@type</option>
}
    </select>
    <button type="submit">Search/Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Vehicle Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.VehicleCount</td>
                <td>
                    <a href="@Url.Action("Details", "Users", new { id = user.UserId })">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
