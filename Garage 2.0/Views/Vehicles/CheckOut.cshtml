@model Garage_2._0.Models.ViewModels.DetailViewModel

@{
    ViewData["Title"] = "Check out";
}

<h1>Check out</h1>

<h3>Are you sure you want to check out this vehicle?</h3>
<div>
    <h4>Vehicle</h4>
