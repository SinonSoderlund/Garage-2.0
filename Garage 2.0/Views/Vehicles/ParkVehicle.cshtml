@model Garage_2._0.Models.ViewModels.DetailViewModel

@{
	ViewData["Title"] = "Park vehicle";
}

<h1>Park</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="ParkVehicle" id="parkVehicleForm" onsubmit="return validateForm()">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="VehicleType" class="control-label"></label>
				<select asp-for="VehicleType" class="form-control" asp-items="@Html.GetEnumSelectList<VehicleType>()" required>
					<option selected="selected" value="">Please select</option>
				</select>
				<span asp-validation-for="VehicleType" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="RegNr" class="control-label"></label>
				<input asp-for="RegNr" class="form-control" required />
				<span asp-validation-for="RegNr" class="text-danger">
				</span>
			</div>
			<div class="form-group">
				<label asp-for="Brand" class="control-label"></label>
				<input asp-for="Brand" class="form-control" required />
				<span asp-validation-for="Brand" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Model" class="control-label"></label>
				<input asp-for="Model" class="form-control" required />
				<span asp-validation-for="Model" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Wheels" class="control-label"></label>
				<input asp-for="Wheels" class="form-control" required />
				<span asp-validation-for="Wheels" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Color" class="control-label"></label>
				<input asp-for="Color" class="form-control" required />
				<span asp-validation-for="Color" class="text-danger"></span>
			</div>
			<div class="form-group" id="parker">
				<input type="submit" value="Park vehicle" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script type="text/javascript">
		function validateForm() {
			const form = document.getElementById("parkVehicleForm");
			// Check if all fields are valid
			if (form.checkValidity()) {
				alert('Vehicle is being parked.');
				return true;
			} else {
				form.reportValidity();
				return false;
			}
		}
	</script>
}
