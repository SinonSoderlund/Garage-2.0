@{
    ViewData["Title"] = "Garage 3.0 - Next-Gen Parking Management";
}

<!-- Progress Bar -->
<div id="progress-bar" class="progress-bar"></div>

<!-- Hero Section -->
<section class="hero-section text-white position-relative overflow-hidden">
    <div class="hero-bg"></div>
    <div class="container position-relative z-3 py-5">
        <div class="row min-vh-100 align-items-center">
            <div class="col-lg-6 fade-in">
                <h1 class="display-1 fw-bold mb-4 gradient-text">Garage 3.0</h1>
                <p class="lead fs-3 mb-5">Revolutionizing parking management with AI-powered solutions</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Vehicles" asp-action="Index"
                       class="btn btn-light btn-lg px-5 py-3 rounded-pill d-inline-flex align-items-center hover-scale">
                        Get Started
                        <i class="bi bi-arrow-right ms-3 btn-icon"></i>
                    </a>
                    <a href="#features" class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill d-inline-flex align-items-center hover-scale">
                        Learn More
                        <i class="bi bi-chevron-down ms-3 btn-icon"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="feature-grid">
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="feature-card glass-card">
                            <div class="feature-icon">
                                <i class="bi bi-p-circle-fill"></i>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Animated Wave -->
    <div class="wave-container">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" class="wave">
            <path fill="#ffffff" fill-opacity="1" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,165.3C1248,171,1344,149,1392,138.7L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
        </svg>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features-section position-relative py-6">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-6 text-center">
                <h2 class="display-4 fw-bold mb-3">Our Features</h2>
                <p class="lead text-muted">Experience next-generation parking management with our smart features</p>
            </div>
        </div>

        <div class="row g-4 justify-content-center">
            @{
                var features = new[]
                {
            // new { Icon = "car-front-fill", Title = "Vehicle Management", Desc = "Comprehensive vehicle tracking and management system for seamless operations.", Color = "success", Percentage = "90" },
            // new { Icon = "clipboard-check-fill", Title = "Easy Administration", Desc = "Intuitive management tools that simplify your daily parking operations.", Color = "info", Percentage = "95" },
            // new { Icon = "shield-check", Title = "Enhanced Security", Desc = "Advanced security measures to protect vehicles and ensure peace of mind.", Color = "danger", Percentage = "92" },
            new { Icon = "p-circle-fill", Title = "Smart Parking", Desc = "AI-powered allocation system that optimizes space utilization and enhances parking efficiency.", Color = "primary", Percentage = "85" },
            new { Icon = "graph-up", Title = "Analytics Dashboard", Desc = "Real-time insights and data visualization for informed decision-making.", Color = "warning", Percentage = "80" },
            new { Icon = "cash-coin", Title = "Automated Billing", Desc = "Streamlined payment processes for hassle-free transactions.", Color = "secondary", Percentage = "88" }
            };
            }

            @foreach (var feature in features)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="modern-card h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-4">
                                <div class="feature-icon-wrapper me-3 bg-@(feature.Color)-subtle">
                                    <i class="bi bi-@feature.Icon text-@feature.Color"></i>
                                </div>
                                <h3 class="card-title h4 mb-0">@feature.Title</h3>
                            </div>
                            <p class="text-muted mb-4">@feature.Desc</p>
                            <div class="progress" style="height: 5px;">
                                <div class="progress-bar bg-@feature.Color"
                                     role="progressbar"
                                     style="width: @(feature.Percentage)%"
                                     aria-valuenow="@feature.Percentage"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 p-4">
                            <a href="#" class="text-@feature.Color text-decoration-none d-flex align-items-center">
                                Learn More
                                <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
