@{
    bool isEdit = ViewData["IsEdit"] != null && (bool)ViewData["IsEdit"];
}

@if (!isEdit)
{
    <div class="form-group">
        <label asp-for="VehicleTypeId" class="control-label"></label>
        <select asp-for="VehicleTypeId" class="form-control" asp-items="@(ViewBag.VehicleTypes as List<SelectListItem>)">
            <option selected="selected" value="">Please select</option>
        </select>
        <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
    </div>
